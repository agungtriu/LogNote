<%- include('../layouts/header.ejs'); -%>

<section class="text-center">
  <h3 class="my-4 fw-semibold">Create Project</h3>
</section>

<section class="container d-flex justify-content-center">
  <form class="w-50" action="/projects/create" method="post">
    <div class="mb-3">
      <label for="">Name</label>
      <input
        type="text"
        class="form-control"
        name="name"
        placeholder="Insert Name"
        required
      />
    </div>
    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea
        class="form-control"
        name="description"
        rows="3"
        placeholder="Insert Description"
        required
      ></textarea>
    </div>
    <div class="mb-3">
      <label for="">Repository</label>
      <input
        type="text"
        class="form-control"
        name="repository"
        placeholder="Insert Link"
        required
      />
    </div>
    <div class="mb-3">
      <label for="">Users</label>
      <select
        class="form-select select[]"
        name="userIds"
        multiple
        data-mdb-placeholder="Select Users"
      >
        <% users.forEach(user => { %>
        <option value="<%=user.id%>"><%= user.username %></option>
        <% }) %> }
      </select>
    </div>
    <div class="mb-3 text-center">
      <input class="btn btn-dark" type="submit" value="Add Project" />
    </div>
  </form>
</section>

<%- include('../layouts/script.ejs'); -%>
